---
import { Image } from 'astro:assets';
import logo from '../assets/logo.jpg';

const navLinks = [
  { href: '#tentang-kami', label: 'Tentang Kami' },
  { href: '#portofolio', label: 'Portofolio' },
  { href: '#our-customers', label: 'Our Customers' },
  { href: '#faq', label: 'FAQ' },
  { href: '#kontak', label: 'Kontak & Pemesanan' },
];
---

<nav class="fixed top-0 left-0 right-0 z-50 bg-white shadow-sm" id="navbar">
  <div class="container mx-auto px-4 lg:px-8">
    <div class="flex items-center justify-between h-16 lg:h-20">
      <!-- Logo -->
      <a href="/" class="flex items-center">
        <Image
          src={logo}
          alt="Narafashion Logo"
          width={120}
          height={40}
          class="h-8 lg:h-10 w-auto"
          loading="eager"
        />
      </a>

      <!-- Desktop Menu -->
      <div class="hidden lg:flex items-center gap-8">
        {navLinks.map((link) => (
          <a
            href={link.href}
            class="text-gray-700 hover:text-primary text-sm font-medium transition-colors"
          >
            {link.label}
          </a>
        ))}
      </div>

      <!-- Mobile Menu Button -->
      <button
        type="button"
        class="lg:hidden text-gray-700 p-2"
        id="mobile-menu-btn"
        aria-label="Toggle menu"
      >
        <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24" id="menu-icon">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
        </svg>
        <svg class="w-6 h-6 hidden" fill="none" stroke="currentColor" viewBox="0 0 24 24" id="close-icon">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
        </svg>
      </button>
    </div>
  </div>

  <!-- Mobile Menu -->
  <div class="lg:hidden hidden bg-white border-t" id="mobile-menu">
    <div class="container mx-auto px-4 py-4 flex flex-col gap-4">
      {navLinks.map((link) => (
        <a
          href={link.href}
          class="text-gray-700 hover:text-primary text-base font-medium transition-colors py-2"
        >
          {link.label}
        </a>
      ))}
    </div>
  </div>
</nav>

<script>
  const mobileMenuBtn = document.getElementById('mobile-menu-btn');
  const mobileMenu = document.getElementById('mobile-menu');
  const menuIcon = document.getElementById('menu-icon');
  const closeIcon = document.getElementById('close-icon');

  // Mobile menu toggle
  mobileMenuBtn?.addEventListener('click', () => {
    mobileMenu?.classList.toggle('hidden');
    menuIcon?.classList.toggle('hidden');
    closeIcon?.classList.toggle('hidden');
  });

  // Close mobile menu when clicking a link
  mobileMenu?.querySelectorAll('a').forEach((link) => {
    link.addEventListener('click', () => {
      mobileMenu?.classList.add('hidden');
      menuIcon?.classList.remove('hidden');
      closeIcon?.classList.add('hidden');
    });
  });
</script>
