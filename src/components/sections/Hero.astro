---
import { Image } from 'astro:assets';
import heroBg from '../../assets/hero/1.png';

const services = [
  'Seragam & Pakaian Resmi',
  'Busana Muslim & Modest Wear',
  'Casual & Daily Wear',
  'Aksesoris & Pendukung Fashion',
  'Kebutuhan Tekstil Khusus/Lainnya',
];

const whatsappNumber = '6282141313615';
const whatsappMessage = encodeURIComponent('Halo Narafashion, saya ingin konsultasi tentang jasa konveksi');
const whatsappLink = `https://wa.me/${whatsappNumber}?text=${whatsappMessage}`;
---

<section id="home" class="relative min-h-screen flex items-center">
  <!-- Background Image -->
  <div class="absolute inset-0 z-0">
    <Image
      src={heroBg}
      alt="Narafashion Konveksi Workshop"
      class="w-full h-full object-cover"
      loading="eager"
    />
    <!-- Dark Overlay -->
    <div class="absolute inset-0 bg-black/60"></div>
  </div>

  <!-- Content -->
  <div class="relative z-10 container mx-auto px-4 lg:px-8 pt-20 lg:pt-24">
    <div class="grid grid-cols-1 lg:grid-cols-12 gap-8 lg:gap-12 items-center">

      <!-- Left Side: Text Content -->
      <div class="lg:col-span-8 space-y-8">
        <!-- Headline -->
        <div>
          <h1 class="text-4xl md:text-5xl lg:text-6xl font-bold text-white leading-tight">
            Konveksi Termurah
            <br />
            di Malang
          </h1>
        </div>

        <!-- Subheadline -->
        <div>
          <p class="text-xl md:text-2xl lg:text-3xl text-white font-semibold">
            Harga Mulai Dari Rp7000
            <br />
            Disini Produksi Apa Aja Bisa!
          </p>
        </div>

        <!-- Services List -->
        <ul class="space-y-2">
          {services.map((service) => (
            <li class="flex items-center gap-3 text-white text-base md:text-lg">
              <span class="w-2 h-2 bg-white rounded-full flex-shrink-0"></span>
              {service}
            </li>
          ))}
        </ul>
      </div>

      <!-- Right Side: CTA Buttons -->
      <div class="lg:col-span-4 flex flex-col items-center justify-center gap-6">
        <a
          href="#jasa-konveksi"
          class="w-full max-w-xs inline-flex items-center justify-center px-10 py-4 border-2 border-white text-white font-semibold rounded-full hover:bg-white hover:text-primary transition-colors text-center text-lg"
        >
          LAYANAN KAMI
        </a>
        <a
          href={whatsappLink}
          target="_blank"
          rel="noopener noreferrer"
          class="w-full max-w-xs inline-flex items-center justify-center gap-3 px-10 py-4 bg-primary border-2 border-primary text-white font-semibold rounded-full hover:bg-primary-dark hover:border-primary-dark transition-colors text-center text-lg"
        >
          <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24">
            <path d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.89-5.335 11.893-11.893a11.821 11.821 0 00-3.48-8.413z"/>
          </svg>
          FREE KONSULTASI
        </a>
      </div>

    </div>
  </div>
</section>
