---
const portfolioItems = [
  {
    name: 'SMA Negeri 9 Malang',
    rating: 5,
    testimonial: 'Seragamnya rapi, bahannya nyaman dipakai, dan jahitannya kuat. Prosesnya juga cepat dan komunikatif.',
    images: ['/portofolio/1.jpeg', '/portofolio/2.jpeg'],
  },
  {
    name: 'BA Restu Malang',
    rating: 5,
    testimonial: 'Hasil produksinya sangat memuaskan, terlihat rapi dan seragam saat acara wisuda. Terima kasih Narafashion.',
    images: ['/portofolio/3198a5a5-68a2-4e0c-a37a-031d411c7029.JPG', '/portofolio/af16c5d5-f73f-4349-959c-1317f7429997.JPG'],
  },
  {
    name: 'Universitas Islam Negeri Maulana Malik Ibrahim',
    rating: 5,
    testimonial: 'Kualitas jahitan bagus, detailnya rapi, dan nyaman digunakan untuk kegiatan praktik maupun acara resmi.',
    images: ['/portofolio/84b79c2f-6135-48db-bed1-78be0e0d7a29.JPG'],
  },
  {
    name: 'Universitas Brawijaya',
    rating: 5,
    testimonial: 'Vest KKN-nya kuat, nyaman dipakai seharian, dan hasilnya sesuai dengan yang kami harapkan.',
    images: ['/portofolio/a287d5be-8d68-4b70-ab8b-d7aee516355d.JPG'],
  },
];

const renderStars = (rating: number) => {
  return Array(5).fill(0).map((_, i) => i < rating ? '★' : '☆').join('');
};
---

<section id="portofolio" class="py-20 lg:py-28 bg-white">
  <div class="container mx-auto px-4 lg:px-8">
    <!-- Title -->
    <h2 class="text-3xl md:text-4xl lg:text-5xl font-bold text-center text-gray-900 mb-12">
      PORTOFOLIO
    </h2>

    <!-- Portfolio Grid -->
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-8 lg:gap-12">
      {portfolioItems.map((item) => (
        <div class="flex flex-col items-center text-center">
          <!-- Images -->
          <div class={`flex gap-3 mb-6 w-full justify-center ${item.images.length === 1 ? 'max-w-md' : ''}`}>
            {item.images.map((image, index) => (
              <div class={`overflow-hidden rounded-lg ${item.images.length === 1 ? 'w-full' : 'w-1/2'}`}>
                <img
                  src={image}
                  alt={`${item.name} - ${index + 1}`}
                  class="w-full h-48 md:h-56 object-cover hover:scale-105 transition-transform duration-300"
                  loading="lazy"
                />
              </div>
            ))}
          </div>

          <!-- Client Name -->
          <h3 class="text-lg md:text-xl font-bold text-gray-900 mb-2">
            {item.name}
          </h3>

          <!-- Star Rating -->
          <div class="text-yellow-400 text-xl mb-3 tracking-wider">
            {renderStars(item.rating)}
          </div>

          <!-- Testimonial -->
          <p class="text-gray-700 italic text-sm md:text-base max-w-md">
            "{item.testimonial}"
          </p>
        </div>
      ))}
    </div>
  </div>
</section>
